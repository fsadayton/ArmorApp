<Alloy>
	<View id="buttonBar">
		<View id="listButton" class="buttonBarAction" left="0" visible=false onClick="toggleMapListView">
			<ImageView id="listImage" class="buttonBarImage" image="/global/list256.png"/>
			<Label id="listImage" class="buttonBarLabel">LIST</Label>
		</View>
		<View id="mapButton" class="buttonBarAction" left="0" onClick="toggleMapListView" visible=true>
			<ImageView id="mapImage" class="buttonBarImage" image="/global/map256.png"/>
			<Label id="mapLabel" class="buttonBarLabel">MAP</Label>
		</View>
		<View id="filterButton" class="buttonBarAction" right="0" onClick="filterResults">
			<ImageView id="mapImage" class="buttonBarImage" image="/global/filter256.png"/>
			<Label id="mapLabel" class="buttonBarLabel">FILTER</Label>
		</View>
	</View>
</Alloy>
