<Alloy>
	<Window id="win" onOpen="Alloy.Globals.updateActionBar">
		<View id="summaryView">
			<Label id="summaryHeader" class="header">FILTER SUMMARY</Label>
			<ScrollView id="summaryText">
				<View layout="horizontal" width="95%">
				<Label class="summary">Show me</Label>
				<Label class="summary" id="categorySummary">ALL</Label>
				<Label class="summary">services in</Label>
				<Label class="summary" id="countySummary">ALL</Label>
				<Label class="summary"> counties.</Label>
				</View>
			</ScrollView>
		</View>
		
		<ScrollableView>
			<View id="categoriesContainer" class="container">
				<View class="header">
					<Label>CATEGORIES</Label>
					<ImageView class="arrow" id="rightArrow" right="10dp" image="/global/right-arrow.png" />
				</View>
				<ScrollView scrollType="vertical" backgroundColor="#fff">
					<View id="categoriesPicker"/>
				</ScrollView>
			</View>
			<View id="countiesContainer" class="container">
				<View class="header">
					<Label>COUNTIES</Label>
					<ImageView class="arrow" id="leftArrow" left="10dp" image="/global/back-arrow.png" />
				</View>
				<!--<View id="countiesPicker">
					<TableView id="countyList"></TableView>
			</View>-->
				<ScrollView scrollType="vertical" backgroundColor="#fff">
					<View id="countiesPicker"/>
			</ScrollView>
			</View>
		</ScrollableView>
		<Button id="closeButton" onClick="close">CLOSE</Button>
		
	</Window>
</Alloy>