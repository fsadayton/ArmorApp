<Alloy>
	<Model src="profileBasics"/>
	<Window id="win" onOpen="Alloy.Globals.updateActionBar">
		<!--<Require src="header"></Require>-->
		<View class="divider"/>
		<ImageView id="accountImage" image="{profileBasics.profile_pic}"/>
		<Label id="name" text="{profileBasics.name}"/>
		<View id="profileBar">
			<View id="profile" class="profileView" backgroundColor="#e9e9e9" onClick="toggleSelection">
				<ImageView class="profileButton" image="/global/round58.png" />
			</View>
			<View id="trustedContacts" class="profileView" onClick="toggleSelection">			
				<ImageView class="profileButton" image="/global/add126.png" />
			</View>
			<View id="favorites" class="profileView" onClick="toggleSelection">			
				<ImageView class="profileButton" image="/global/star256.png" />
			</View>
		</View>
		
		<ScrollableView id="profileScroll">
			<View layout="vertical">
				<Label class="headerLabel">PROFILE SUMMARY</Label>
				<ScrollView layout="vertical" height="70%">
					<View layout="horizontal" width="90%" height="52%">
						<Label class="sentence">My name is</Label>
						<TextField id="nameField" class="sentence" editable=false focusable=false value="{profileBasics.name}" onClick="updateProfile"/>
						<Label class="sentence">and I want</Label>
						<Label class="sentence">to see</Label> 
						<Label class="sentence">services in</Label>
						<TextField id="county" class="sentence" editable=false focusable=false value="{profileBasics.county}" onClick="pickCounty"/>
						<Label class="sentence">county.</Label>
					</View>
					<View layout="horizontal" width="90%" height="55%" >
						<Label class="sentence">My 'quick-hide'</Label>
						<Label class="sentence">website is</Label>
						<TextField id="website" class="sentence" editable=false focusable=false value="{profileBasics.website}" onClick="updateProfile"/>
					</View>
				</ScrollView>
				<Button bottom="10dp" onClick="updateProfilePic">Update Profile Picture</Button>
			</View>
			<View>
				<Label class="headerLabel">TRUSTED CONTACTS</Label>
				<TableView id="contactTable" onClick="viewContacts">
					<TableViewRow>
						<Label>John Doe • 937.554.5767</Label>
					</TableViewRow>
					<TableViewRow>
						<Label>Harry Smith • 419.344.5555</Label>
					</TableViewRow>
					<TableViewRow>
						<Label>Mary Thompson • 937.555.1234</Label>
					</TableViewRow>
				</TableView>
			</View>
			<View>
				<Label class="headerLabel">FAVORITE SERVICES</Label>
				<Label>No favorites have been saved.</Label>
			</View>
		</ScrollableView>
	</Window>
</Alloy>