<Alloy>
	<TabGroup id="tabGroup" onOpen="Alloy.Globals.updateActionBar">
		<Tab title="GENERAL" icon="/tabs/home63.png">
			<Window class="container" id="win">
				<Require id="iosNavGeneral" src="iosNavigation" platform="ios"/>
				<ActivityIndicator id="generalIndicator"/>
				<TableView id="generalTable" class="menu" onClick="listProviders">
				</TableView>
			</Window>
		</Tab>
		<Tab title="CRIME" icon="/tabs/criminal.png" >
			<Window class="container" id="win">
				<Require id="iosNavCrime" src="iosNavigation" platform="ios"/>
				<ActivityIndicator id="crimeIndicator"/>
				<TableView id="crimeTable" class="menu" onClick="listProviders">
				</TableView>
			</Window>
		</Tab>
	</TabGroup>
	
</Alloy>