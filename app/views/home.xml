<Alloy>
	<Window id="win" class="container" title="Home" layout="vertical" onOpen="Alloy.Globals.updateActionBar">
		<RightNavButtons platform="ios">
				<View height="Ti.UI.SIZE">
					<Button id="navHelp" backgroundImage="/images/add126.png" onClick="Alloy.Globals.sendTextMessage"/>
				</View>
				<View width=55 height="Ti.UI.SIZE">
					<Button id="navHide" backgroundImage="/images/blind2.png" onClick="Alloy.Globals.hideScreen" />
				</View>
		</RightNavButtons>
		<View class="divider"/>
		<ImageView id="welcomeLabel" image="/global/AVIATOR_Logo_COLOR.png"/>
		
		<View class="boxContainer">
			<View class="left box" onClick="openProviders" >
				<View class="divider" backgroundColor="#A65BA6"/>
				<Label class="name" >PERSONAL RESOURCES</Label>
				<ImageView class="icon" image="/global/familiar17.png" />
				<Label class="description">View organizations that can help address your needs</Label>
			</View>
			<View class="right box" onClick="openCorrections" > 
				<View class="divider" backgroundColor="#00A0A6"/>
				<Label class="name">LAW & CORRECTIONS</Label>
				<ImageView class="icon" image="/global/hands6.png" />
				<Label class="description">Contact local authorities or find jail time info about an offender</Label>
			</View>
		</View>
		
		<View class="boxContainer">
			<View class="left box" onClick="openVictimCompensation">
				<View class="divider" backgroundColor="#9D9FA2"/>
				<Label class="name" >VICTIM COMPENSATION</Label>
				<ImageView class="icon" image="/global/compensation_256.png" />
				<Label class="description">Victim of a violent crime? View financial assistance options here.</Label>
			</View>
			<View class="right box" onClick="openSpecialServices">
				<View class="divider" backgroundColor="#577590"/>
				<Label class="name">SPECIALIZED SERVICES</Label>
				<ImageView class="icon" image="/global/disabled8.png" />
				<Label class="description">Find specialized resources for veterans, the elderly, and more</Label>
			</View>
		</View>
		
		<View class="boxContainer">
			<View class="left box" onClick="openAccount">
				<View class="divider" backgroundColor="#009577"/>
				<Label class="name">MY ACCOUNT</Label>
				<ImageView class="icon" image="/global/round58.png" />
				<Label class="description">View your trusted contacts and favorite providers</Label>
			</View>
			<View class="right box" onClick="openCrisisLines" >
				<View class="divider" backgroundColor="#203444"/>
				<Label class="name">CRISIS CONTACTS</Label>
				<ImageView class="icon" image="/global/phone_256.png" />
				<Label class="description">View local phone numbers that match your needs</Label>
			</View>
		</View>
	</Window>
</Alloy>