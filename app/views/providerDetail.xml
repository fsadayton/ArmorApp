<Alloy>
	<Window class="container" id="win" onOpen="Alloy.Globals.updateActionBar">
		<Require src="header"></Require>
		<View class="divider"/>
		<Label id="providerName"/>
		
		<TextArea id="providerDescription"/>
		
		<Label id="addressLabel">ADDRESS</Label>
		<View id="addressView">
			<Label id="address"/>
			<Button id="driveButton" onClick="getDirections">Get Directions</Button>
		</View>
		<View id="phoneView" class="actionView" onClick="callPhoneNumber">
			<ImageView class="actionImage" image="/global/phone_256.png" />
			<Label id="phoneLabel" class="actionLabel"/>
		</View>
		<View id="emailView" class="actionView" onClick="openEmail">
			<ImageView class="actionImage" image="/global/email256.png" />
			<Label id="emailLabel" class="actionLabel">EMAIL THIS PROVIDER</Label>
		</View>
		<View id="websiteView" class="actionView" onClick="openWebsite">
			<ImageView class="actionImage" image="/global/domain256.png" />
			<Label id="webLabel" class="actionLabel">VISIT WEBSITE</Label>
		</View>
			
		<!--<View id="favorite" class="tagShare">
			<ImageView id="favoriteIcon" class="tagShareIcon" image="/global/star256.png" />
			<Label id="favorite" class="tagShareLabel">Tag as Favorite</Label>
		</View>
		<View id="share" class="tagShare">
			<ImageView id="shareIcon" class="tagShareIcon" image="/global/share256.png" />
			<Label id="share" class="tagShareLabel">Share with Friends</Label>
		</View>-->
	</Window>
</Alloy>